@model NsdcTraingPartnerHub.Web.Areas.TrainingPartner.Models.UpdateCenterAuthorityVM;
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="post" asp-controller="CenterAuthority" asp-action="Update">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-12">
            <div class="border p-3 mt-4 row">
                <div class="row pb-2">
                    <h2 class="text-primary"> Add Center`s Authority Member </h2>
                    <hr />
                </div>
                <div asp-validation-summary="All" class="text-danger"> </div>
                <div class="mb-3">
                    <label asp-for="CenterAuthorityMember.Name"></label>
                    <input asp-for="CenterAuthorityMember.Name" class="form-control" />
                    <span asp-validation-for="CenterAuthorityMember.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="CenterAuthorityMember.Designation"></label>
                    <input asp-for="CenterAuthorityMember.Designation" class="form-control" />
                    <span asp-validation-for="CenterAuthorityMember.Designation" class="text-danger"></span>
                </div>

                <div class="mb-3 col-6">
                    <label asp-for="CenterAuthorityMember.PhoneNo"></label>
                    <input asp-for="CenterAuthorityMember.PhoneNo" class="form-control" />
                    <span asp-validation-for="CenterAuthorityMember.PhoneNo" class="text-danger"></span>
                </div>

                <div class="mb-3 col-6">
                    <label asp-for="CenterAuthorityMember.Email"></label>
                    <input asp-for="CenterAuthorityMember.Email" class="form-control" />
                    <span asp-validation-for="CenterAuthorityMember.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <div class="form-check">
                        <input asp-for="IsCreateLogin" class="form-check-input" type="checkbox" value="true">
                        <label class="form-check-label" for="flexCheckDefault">
                            Create Login [<span class="text-warning">Above email Id will be User Id </span>]
                        </label>
                    </div>
                </div>
                <div class="mb-3 col-6">

                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3 col-6">

                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="p-3">
                    <button type="submit" class="btn btn-primary" onclick="return verify_createLogin();">
                        <i class="bi bi-check-circle">&nbsp;</i> Update </button>
                    <a asp-controller="CenterAuthority"  asp-action="Index"
                    asp-route-id="@Model.CenterAuthorityMember.TrainingCenterId" class="btn btn-secondary">Back To Member List</a>
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }

<script src="~/js/tp/authMember.js"></script>
}

