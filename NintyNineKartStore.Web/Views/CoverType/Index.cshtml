@model IEnumerable<CoverTypeDto>;

@*
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
*@


<div class="container pt-4">
    <div class="row ">
        <div class="col-6">
            <h2 class="text-primary">CoverType List</h2>
        </div>

        <div class="col-6 text-end">
            <a type="button" asp-action="Create" asp-area="" asp-controller="CoverType" class="btn btn-primary"><i class="bi bi-plus-circle-dotted"></i> New CoverType </a>
        </div>
    </div>

    <table class="table table-hover table-bordered table-striped w-100">
        <thead>
            <tr>
                <th>  Category Name  </th>
                <th>CreatedOn</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>  @obj.Name  </td>
                    <td>  @obj.CreatedOn </td>
                    <td class="text-end">
                        <div class="btn-group" role="group">
                            <a class="btn btn-outline-primary" asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id"> <i class="bi bi-pencil-square">&nbsp;</i> Edit</a>
                            <a class="btn btn-outline-danger" asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id"> <i class="bi bi-trash">&nbsp;</i> Delete</a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>

    </table>
</div>