@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Http
@using NintyNineKartStore.Utility

@inject IHttpContextAccessor HttpContextAccessor
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <div class="btn-group">
                <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
                @*     </li>
                    <li class="nav-item ">*@
                <a class="nav-link position-relative" href="#" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="align-middle bi bi-gear"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">

                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                        <i class="align-middle me-1 bi bi-person"></i> View Profile
                    </a>

                    <a class="dropdown-item" href="#"><i class="align-middle me-1 fa fa-address-book-o"></i> Contacts</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#"><i class="align-middle me-1 fas fa-fw fa-chart-pie"></i> Analytics</a>

                    <a class="dropdown-item" href="#"><i class="align-middle me-1 fas fa-fw fa-cogs"></i> Settings </a>
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Email"><i class="fas fa-at"></i> Email </a>
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/ChangePassword"><i class="fas fa-key"></i> Change Password </a>
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/PersonalData"><i class="bi bi-person-lines-fill"></i> Personal Data </a>
                    <div class="dropdown-divider"></div>

                    <div class="dropdown-item">
                        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button id="logout" type="submit" class="btn btn-link nav-link text-dark p-0">  <i class="bi bi-box-arrow-right">&nbsp;</i> Logout</button>
                        </form>
                    </div>

                </div>
            </div>

        </li>
        <li class="nav-item">
            <a id="ShoppingCart" class="nav-link" asp-controller="ShoppingCart" asp-area="Customer" asp-action="Index" title="Manage">

                @if (HttpContextAccessor.HttpContext.Session.GetInt32(SD.ShoppinghCart.ShoppingCartItemsCount) != null)
                {
                    <i class="bi bi-cart">[@HttpContextAccessor.HttpContext.Session.GetInt32(SD.ShoppinghCart.ShoppingCartItemsCount)]</i>
                }
                else
                {
                    <i class="bi bi-cart"> &nbsp; @HttpContextAccessor.HttpContext.Session.GetInt32(SD.ShoppinghCart.ShoppingCartItemsCount) </i>
                }

            </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login"><i class="bi bi-box-arrow-in-right">&nbsp;</i>Login</a>
        </li>
    }

</ul>
