
@model ShoppingCartViewModel;

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <div class="card container">
        <div class="card-header bg-primary text-light ml-0 row">
            <div class="col-12 col-md-6 ">
                <h1 class="text-white-50"> @Model.productDto.Title </h1>
                <p class="text-warning"> @Model.productDto.Manufacturer</p>
            </div>
            <div class="col-12 col-md-6 text-end pt-4 ">
                <span class="badge bg-info  pt-2" style="height:30px;"> @Model.productDto.Category.Name </span>
                <span class="badge bg-warning pt-2" style="height:30px;"> @Model.productDto.CoverType.Name</span>
            </div>

        </div>
        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-8 col-lg-8">
                        <div class="row pl-2 ">
                            <h5 class="text-muted ">Serial No.: @Model.productDto.SerialNo</h5>
                        </div>
                        <div class="row pl-2 ">
                            <h5 class="text-muted pb-2">List Price: <strike> @Model.productDto.ListPrice.ToString("c")</strike></h5>
                        </div>
                        <div class="row text-center pl-2">
                            <div class="p-1 col-3 border-bottom">
                                <div>Quantity</div>
                            </div>
                            <div class="p-1 col-3 border-bottom">
                                <div>1-50</div>
                            </div>
                            <div class="p-1 col-3  border-bottom">
                                <div>51-100</div>
                            </div>
                            <div class="p-1 col-3   border-bottom">
                                <div>100 and More</div>
                            </div>
                        </div>

                        <div class="row text-center pl-2" style="color:maroon; font-weight:bold;">
                            <div class="p-1 col-3 border-bottom">
                                <div>Price</div>
                            </div>
                            <div class="p-1 col-3  border-bottom">
                                <div>@Model.productDto.Price.ToString("c")</div>
                            </div>
                            <div class="p-1 col-3  border-bottom">
                                <div>@Model.productDto.Price50.ToString("c")</div>
                            </div>
                            <div class="p-1 col-3 border-bottom">
                                <div>@Model.productDto.Price100.ToString("c")</div>
                            </div>
                        </div>
                        <div class="row pl-2">
                            <p class="text-secondary"> @Html.Raw(Model.productDto.Description)</p>
                        </div>
                        <div class="row pl-2 pb-3">
                            <div class="col-3 text-primary  "><h4>Quantity</h4></div>
                            <div class="col-9"><input class="form-control" asp-for="Count" /></div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 offset-lg-1 text-center">
                        <img class="rounded img-fluid" src="@Model.productDto.ImageUrl" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <a asp-action="Index" class="btn btn-secondary form-control">Back To List</a>
                </div>
                <div class="col-6">
                    <button type="submit" class="btn btn btn-primary  form-control">Add To Cart</button>
                </div>
            </div>
        </div>
    </div>
</form>

