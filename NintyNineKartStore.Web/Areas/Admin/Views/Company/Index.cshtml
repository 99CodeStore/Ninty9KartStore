@model IEnumerable<CompanyDto>;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container pt-4">
    <div class="row ">
        <div class="col-6">
            <h2 class="text-primary">Company List</h2>
        </div>

        <div class="col-6 text-end">
            <a type="button" asp-action="Upsert" asp-controller="Company" class="btn btn-primary"><i class="bi bi-plus-circle-dotted"></i> New Company </a>
        </div>
    </div>
    <table id="CompanyListTable" class="table table-hover table-bordered table-striped w-100">
        <thead>
            <tr>
                <th>  Company Name  </th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Postal Code</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
             

        </tbody>

    </table>
</div>


@section Scripts{
    <script src="~/js/admin/company.js" async></script>
}